<header id="top">
    <div class="container">
        <div style="display:flex">
        <img src="/img/foto.png"/ style="width:130px">
        <div class="header-title"> 
            <h1 style="line-height: 30px;"> My name is <strong>Artem Pichugin </strong><br>
                I am a Solution Architect</h1></div>
        </div>
    </div><!-- .container -->
</header><!-- header -->

<div id="main" role="main" class="container">
    <h2 style="font-size:20px">This site contains examples of my work. <br>
        Mail me: <strong><a href="mailto:a.k.pichugin@gmail.com" style="color: #2894bc">a.k.pichugin@gmail.com</a></strong>
        <br>
        Resume: <strong><a href="mailto:a.k.pichugin@gmail.com" style="color: #2894bc">artem-pichugin-resume.pdf</a></strong>
    </h2>

    <section id="work">
        <div class="swipe-hint mob"></div>

     {{#each articles}}
         <div class="hr date"><span>{{this.date}}</span></div>
        <article class="cf">
            <div class="description">
                <h3><a class="expand tr-roll" href="http://artempichugin.ru/#"></a>{{this.title}}</h3>
                <h4>{{this.subtitle}}</h4>

                <div class="details">
                    <p>{{this.description}} </p>
                    <ul class="responsibilities">
                        {{#each this.tags}}
                            <li>{{this}}</li>
                        {{/each}}
                    </ul>
                    <ul class="links">

                        {{#each this.links}}
                            <li><a href="{{this.url}}" target="_blank">{{this.name}} </a></li>
                        {{/each}}

                    </ul>
                </div><!-- .details -->

                <ul class="flex-direction-nav">
                    <li><a class="flex-prev disabled" href="#"></a></li>
                    <li><a class="flex-next" href="#"></a></li>
                </ul>
            </div><!-- .description -->

            <div class="images">
                <div class="flex-viewport">

                </div>
                <div class="flex-viewport"><ul class="slides cf">
                    {{#each this.images}}
                        <li><img style="width: 450px" src="{{this}}"></li>
                    {{/each}}
                </ul></div></div><!-- .images -->
        </article> <hr> <!-- article -->
        {{/each}}

        <p class="center"><a class="totop tr-hover" href="/#top">Up</a></p>
    </section><!-- #work -->
</div><!-- .container -->